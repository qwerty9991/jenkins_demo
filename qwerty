      stage('Checkout') {
        steps {
            checkout([
                $class: 'GitSCM',
                branches: [[name: '*/main']],
                userRemoteConfigs: [[url: 'https://github.com/username/repo.git']],
                gitTool: 'Default' // Ensure this matches the name you configured
            ])
            script {
              // echo "Good Morning, $FIRST_NAME"
              sh '''
                pwd
                ls -altr
                cat .git/HEAD
                git rev-parse --abbrev-ref HEAD
                # hostname
                # cat /etc/os-release
              '''
            }
    }
  }
}