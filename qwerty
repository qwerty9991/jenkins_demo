pipeline {
  agent any
  stages {
    stage('input') {
      agent any
      when {
        beforeInput true
        branch 'master'
      }
      input {
        message "What is your first name?"
        ok "Submit"
        parameters {
          string(defaultValue: 'Dave', name: 'FIRST_NAME', trim: true) 
        }
      }
      script {
         // echo "Good Morning, $FIRST_NAME"
         sh '''
           pwd
           ls -altr
           cat .git/HEAD
           git rev-parse --abbrev-ref HEAD
           # hostname
           # cat /etc/os-release
         '''
            }
    }
  }
}
